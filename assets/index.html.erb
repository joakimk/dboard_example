<!doctype html>
<html>
<head>
  <meta charset="utf-8"/>
  <title>Dashboard</title>

  <script src="jquery.js"></script>
  <script src="dashboard.js"></script>
  <script type="text/javascript">
    $(document).ready(function() {
        window.dashboard_version = '<%= ENV['COMMIT_HASH'] || 'unversioned' %>';
        dashboard = new window.Dashboard();

        var CpuLoadWidget = function()
        {
          this.render = function(data)
          {
            $("#cpu_load")[0].style.width = data.load + "%"
          }
        }

        dashboard.addWidget('cpu', CpuLoadWidget);
        dashboard.run();
    });
  </script>
</head>

<body>
  <div id="content">
    <div style="width: 300px; height: 100px; margin: 20px; border: 1px solid black; border-radius: 5px">
      <div id="cpu_load" style="background-color: black; height: 100px; border-radius: 5px">&nbsp;</div>
    </div>
  </div>
</body>
</html>
